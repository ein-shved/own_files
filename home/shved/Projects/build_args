#!/bin/bash

INST_ROOT="$HOME/usr"
INST_ROOT32="$HOME/usr32"
PROJECTS_DIR="$HOME/Projects"
SPICE="$HOME/Projects/Spice"
export PREFIX="$INST_ROOT"
export PREFIX32="$INST_ROOT32"

LD_LIBRARY_PATH="$INST_ROOT/lib"
LD_LIBRARY_PATH=$LD_LIBRARY_PATH:"$INST_ROOT/lib/yaocw"
PKG_CONFIG_PATH="$INST_ROOT/lib/pkgconfig/:$INST_ROOT/share/pkgconfig/"
ACLOCAL="aclocal -I $INST_ROOT/share/aclocal"

export SRC_ROOT INST_ROOT LD_LIBRARY_PATH PKG_CONFIG_PATH ACLOCAL

#This is section for cros-compilation enviroment by OpenWRT (Buildroot)

OPENWRT_ROOT=$PROJECTS_DIR/arccn/openwrt/trunk
OWRT_STAGING_DIR=$OPENWRT_ROOT/staging_dir
STAGING_DIR=$OWRT_STAGING_DIR

OWRT_MIPS_ARCHITECTURE=mips
OWRT_MIPS_ARCHITECTURE_POSTFIX=_34kc
OWRT_MIPS_GCC_VERSION=4.8-linaro
OWRT_MIPS_UCLIBC_VER=0.9.33.2

OWRT_MIPS_BUILD_DIR=$OPENWRT_ROOT/build_dir
OWRT_MIPS_STAGING_DIR=$OWRT_STAGING_DIR/toolchain-"$OWRT_MIPS_ARCHITECTURE""$OWRT_MIPS_ARCHITECTURE_POSTFIX"_gcc-"$OWRT_MIPS_GCC_VERSION"_uClibc-"$OWRT_MIPS_UCLIBC_VER"
OWRT_MIPS_TARGET_DIR=$OWRT_STAGING_DIR/target-"$OWRT_MIPS_ARCHITECTURE""$OWRT_MIPS_ARCHITECTURE_POSTFIX"_uClibc-"$OWRT_MIPS_UCLIBC_VER"

OWRT_MIPS_BIN_PREFIX=$OWRT_MIPS_STAGING_DIR/bin/"$OWRT_MIPS_ARCHITECTURE"-openwrt-linux-
OWRT_MIPS_GCC="$OWRT_MIPS_BIN_PREFIX"gcc
OWRT_MIPS_GPP="$OWRT_MIPS_BIN_PREFIX"g++
OWRT_MIPS_LD="$OWRT_MIPS_BIN_PREFIX"ld

OWRT_MIPS_TARGET_INCLUDE_PATH=$OWRT_MIPS_TARGET_DIR/usr/include
OWRT_MIPS_TARGET_LIB_PATH=$OWRT_MIPS_TARGET_DIR/usr/lib
OWRT_MIPS_TARGET_BIN_PATH=$OWRT_MIPS_TARGET_DIR/usr/bin

export OWRT_MIPS_STAGING_DIR OWRT_MIPS_GCC OWRT_MIPS_GPP OWRT_MIPS_LD OWRT_MIPS_TARGET_LIB_PATH OWRT_MIPS_TARGET_BIN_PATH OWRT_MIPS_TARGET_INCLUDE_PATH STAGING_DIR

OWRT_ARM_CORTEX_ARCHITECTURE=arm_cortex
OWRT_ARM_CORTEX_ARCHITECTURE_POSTFIX=-a9+vfp
OWRT_ARM_CORTEX_GCC_VERSION=4.6-linaro
OWRT_ARM_CORTEX_UCLIBC_VER=0.9.33.2_eabi

OWRT_ARM_CORTEX_BUILD_DIR=$OPENWRT_ROOT/build_dir
OWRT_ARM_CORTEX_STAGING_DIR=$OWRT_STAGING_DIR/toolchain-"$OWRT_ARM_CORTEX_ARCHITECTURE""$OWRT_ARM_CORTEX_ARCHITECTURE_POSTFIX"_gcc-"$OWRT_ARM_CORTEX_GCC_VERSION"_uClibc-"$OWRT_ARM_CORTEX_UCLIBC_VER"
OWRT_ARM_CORTEX_TARGET_DIR=$OWRT_STAGING_DIR/target-"$OWRT_ARM_CORTEX_ARCHITECTURE""$OWRT_ARM_CORTEX_ARCHITECTURE_POSTFIX"_uClibc-"$OWRT_ARM_CORTEX_UCLIBC_VER"

OWRT_ARM_CORTEX_BIN_PREFIX=$OWRT_ARM_CORTEX_STAGING_DIR/bin/arm-openwrt-linux-
OWRT_ARM_CORTEX_GCC="$OWRT_ARM_CORTEX_BIN_PREFIX"gcc
OWRT_ARM_CORTEX_GPP="$OWRT_ARM_CORTEX_BIN_PREFIX"g++
OWRT_ARM_CORTEX_LD="$OWRT_ARM_CORTEX_BIN_PREFIX"ld

OWRT_ARM_CORTEX_TARGET_INCLUDE_PATH=$OWRT_ARM_CORTEX_TARGET_DIR/usr/include
OWRT_ARM_CORTEX_TARGET_LIB_PATH=$OWRT_ARM_CORTEX_TARGET_DIR/usr/lib
OWRT_ARM_CORTEX_TARGET_BIN_PATH=$OWRT_ARM_CORTEX_TARGET_DIR/usr/bin

export OWRT_ARM_CORTEX_STAGING_DIR OWRT_ARM_CORTEX_GCC OWRT_ARM_CORTEX_GPP OWRT_ARM_CORTEX_LD OWRT_ARM_CORTEX_TARGET_LIB_PATH OWRT_ARM_CORTEX_TARGET_BIN_PATH OWRT_ARM_CORTEX_TARGET_INCLUDE_PATH STAGING_DIR OWRT_MIPS_TARGET_DIR OWRT_ARM_CORTEX_TARGET_DIR

OWRT_ARM_ARCHITECTURE=arm_mpcore
OWRT_ARM_ARCHITECTURE_POSTFIX=+vfp
OWRT_ARM_GCC_VERSION=4.8-linaro
OWRT_ARM_UCLIBC_VER=0.9.33.2_eabi

OWRT_ARM_BUILD_DIR=$OPENWRT_ROOT/build_dir
OWRT_ARM_STAGING_DIR=$OWRT_STAGING_DIR/toolchain-"$OWRT_ARM_ARCHITECTURE""$OWRT_ARM_ARCHITECTURE_POSTFIX"_gcc-"$OWRT_ARM_GCC_VERSION"_uClibc-"$OWRT_ARM_UCLIBC_VER"
OWRT_ARM_TARGET_DIR=$OWRT_STAGING_DIR/target-"$OWRT_ARM_ARCHITECTURE""$OWRT_ARM_ARCHITECTURE_POSTFIX"_uClibc-"$OWRT_ARM_UCLIBC_VER"

OWRT_ARM_BIN_PREFIX=$OWRT_ARM_STAGING_DIR/bin/arm-openwrt-linux-
OWRT_ARM_GCC="$OWRT_ARM_BIN_PREFIX"gcc
OWRT_ARM_GPP="$OWRT_ARM_BIN_PREFIX"g++
OWRT_ARM_LD="$OWRT_ARM_BIN_PREFIX"ld

OWRT_ARM_TARGET_INCLUDE_PATH=$OWRT_ARM_TARGET_DIR/usr/include
OWRT_ARM_TARGET_LIB_PATH=$OWRT_ARM_TARGET_DIR/usr/lib
OWRT_ARM_TARGET_BIN_PATH=$OWRT_ARM_TARGET_DIR/usr/bin

export OWRT_ARM_STAGING_DIR OWRT_ARM_GCC OWRT_ARM_GPP OWRT_ARM_LD OWRT_ARM_TARGET_LIB_PATH OWRT_ARM_TARGET_BIN_PATH OWRT_ARM_TARGET_INCLUDE_PATH STAGING_DIR OWRT_MIPS_TARGET_DIR OWRT_ARM_TARGET_DIR
